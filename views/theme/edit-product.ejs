<body>
  <!-- Loader starts-->
  <div class="loader-wrapper">
    <div class="theme-loader">
      <div class="loader-p"></div>
    </div>
  </div>
  <!-- Loader ends-->
  <!-- page-wrapper Start-->
  <div class="page-wrapper" id="pageWrapper">
    <!-- Page Header Start-->
    <div class="page-main-header">
      
    </div>
    <!-- Page Header Ends                              -->
    <!-- Page Body Start-->
    <div class="page-body-wrapper horizontal-menu">
      <!-- Page Sidebar Start-->
      
      <!-- Page Sidebar Ends-->
      <div class="page-body">
        <div class="container-fluid">
          <div class="page-header">
            <div class="row">
              <div class="col-sm-6">
                <h3>Edit Product</h3>
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="">Home</a></li>
                  <li class="breadcrumb-item">Product</li>
                  <li class="breadcrumb-item active">Add Product</li>
                </ol>
              </div>
              <div class="col-sm-6">
                <!-- Bookmark Start-->

                <!-- Bookmark Ends-->
              </div>
            </div>
          </div>
        </div>
        <!-- Container-fluid starts-->
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-12">
              <div class="card">
                <div class="card-body">
                  <div class="form theme-form">
                    <form action="/admin/product/update/<%= productId %>" method="POST" enctype="multipart/form-data">
                      <div class="row">
                        <div class="col">
                          <div class="mb-3">
                            <label>Product name</label>
                            <input class="form-control" type="text" name="title" placeholder="Enter Product name"
                              required value="<%= product ? product.title : '' %>">
                          </div>
                        </div>
                        <div class="col mb-3">
                          <label>Category</label>
                          <select class="form-select" name="categoryId">
                            <% categories.forEach(category=> { %>
                              <option value="<%= category.categoryId %>" <%=product &&
                                product.categoryName===category.categoryName ? 'selected' : '' %>><%=
                                  category.categoryName %>
                              </option>
                              <% }) %>
                          </select>
                        </div>

                      </div>

                      <div class="row">
                        <div class="col">
                          <div class="mb-3">
                            <label>Stock At Present</label>
                            <input class="form-control" type="number  " name="stockAtPresent" required
                              placeholder="Enter Available Stock" value="<%= product ? product.stockAtPresent : '' %>">
                          </div>
                        </div>
                        <div class="col">
                          <div class="mb-3">
                            <label>Product Unit</label>
                            <input class="form-control" type="text" name="unit" placeholder="Enter unit" required
                              value="<%= product ? product.unit : '' %>">
                          </div>
                        </div>


                        <div class="row">
                          <div class="col">
                            <div class="mb-3">
                              <label>Product Description</label>
                              <textarea class="form-control" name="description" required
                                rows="3"><%= product ? product.description : '' %></textarea>
                            </div>
                          </div>
                        </div>

                        <div class="container">
                          <div class="row">
                            <div class="col-md-6">
                              <div class="mb-3">
                                <label>Product Weight</label>
                                <!-- Dynamically render the weight inputs based on the variations array -->
                                <% product.variations.forEach((variation, index)=> { %>
                                  <input class="form-control mt-3" type="text" name="weightOptions[]"
                                    value="<%= variation.weightOption %>" placeholder="Enter Weight <%= index + 1 %>">
                                  <% }); %>
                              </div>
                            </div>

                            <div class="col-md-6">
                              <div class="mb-3">
                                <label>Product Price</label>
                                <!-- Dynamically render the price inputs based on the variations array -->
                                <% product.variations.forEach((variation, index)=> { %>
                                  <input class="form-control mt-3" type="text" name="prices[]"
                                    value="<%= variation.price %>" placeholder="Enter Price <%= index + 1 %>">
                                  <% }); %>
                              </div>
                            </div>
                          </div>
                        </div>

                        <div class="col-12 text-center mt-3">
                          <button type="button" class="btn btn-primary w-100" id="addMore">+ Add More Weight and
                            Price</button>
                        </div>
                        <br><br>
                        <form action="/update-product/<%= product.productId %>" method="POST"
                          enctype="multipart/form-data">
                          <input type="hidden" name="existingImage" value="<%= product.images %>">
                          <div class="row">
                            <div class="col">
                              <div class="mb-3">
                                <label>Current Image</label>
                                <% if (product.images) { %>
                                  <div class="mb-2">
                                    <img src="/<%= product.images %>" alt="Product Image"
                                      style="max-width: 150px; height: auto;">
                                  </div>
                                  <% } else { %>
                                    <span>No image uploaded.</span>
                                    <% } %>

                                      <label>Upload New Image</label>
                                      <input class="form-control" type="file" name="images" accept="image/*">
                              </div>
                            </div>
                          </div>
                          <!-- <button type="submit" class="btn btn-primary">Update Product</button> -->
                          <!-- </form> -->


                          <div class="row">
                            <div class="col">
                              <div class="text-end">
                                <button class="btn btn-secondary me-3" type="submit">Add</button>
                                <!-- <a class="btn btn-danger" href="#">Cancel</a> -->
                              </div>
                            </div>
                          </div>
                        </form>
                      </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Container-fluid Ends-->
        </div>
        <!-- footer start-->
        
      </div>
    </div>
    <!-- latest jquery-->
    <script src="/assets/js/jquery-3.5.1.min.js"></script>
    <!-- feather icon js-->
    <script src="/assets/js/icons/feather-icon/feather.min.js"></script>
    <script src="/assets/js/icons/feather-icon/feather-icon.js"></script>
    <!-- Sidebar jquery-->
    <script src="/assets/js/sidebar-menu.js"></script>
    <script src="/assets/js/config.js"></script>
    <!-- Bootstrap js-->
    <script src="/assets/js/bootstrap/popper.min.js"></script>
    <script src="/assets/js/bootstrap/bootstrap.min.js"></script>
    <!-- Plugins JS start-->
    <script src="/assets/js/dropzone/dropzone.js"></script>
    <script src="/assets/js/dropzone/dropzone-script.js"></script>
    <!-- Plugins JS Ends-->
    <!-- Theme js-->
    <script src="/assets/js/script.js"></script>
    <script src="/assets/js/theme-customizer/customizer.js"></script>
    <!-- login js-->
    <!-- Plugin used-->
    <script>
      document.getElementById('addMore').addEventListener('click', function () {
        // Create a new row for weight and price input fields
        var newRow = document.createElement('div');
        newRow.classList.add('row', 'mt-3');

        // Adding a new weight input field
        var newWeightCol = document.createElement('div');
        newWeightCol.classList.add('col');
        var weightInput = document.createElement('input');
        weightInput.type = 'number';
        weightInput.name = 'weightOptions[]';
        weightInput.placeholder = 'Enter Weight in the unit selected above';
        weightInput.classList.add('form-control');
        weightInput.step = 'any'; // Allow for decimal numbers
        newWeightCol.appendChild(weightInput);

        // Adding a new price input field
        var newPriceCol = document.createElement('div');
        newPriceCol.classList.add('col', 'mb-3');
        var priceInput = document.createElement('input');
        priceInput.type = 'number';
        priceInput.name = 'prices[]';
        priceInput.placeholder = 'Enter Price';
        priceInput.classList.add('form-control');
        priceInput.step = 'any'; // Allow for decimal numbers
        newPriceCol.appendChild(priceInput);

        // Append the new columns to the row
        newRow.appendChild(newWeightCol);
        newRow.appendChild(newPriceCol);

        // Append the new row to the container just before the button
        var weightContainer = document.getElementById('addMore').parentNode;
        weightContainer.parentNode.insertBefore(newRow, weightContainer);
      });
    </script>

<body>

  <!-- Loader ends-->
  <!-- page-wrapper Start-->
  <div class="page-wrapper" id="pageWrapper">
    <!-- Page Header Start-->
    <div class="page-main-header">
      
    </div>
    <!-- Page Header Ends                              -->
    <!-- Page Body Start-->
    <div class="page-body-wrapper horizontal-menu">
      <!-- Page Sidebar Start-->
      
      <!-- Page Sidebar Ends-->
      <div class="page-body">
        <div class="container-fluid">
          <div class="page-header">
            <div class="row">
              <div class="col-sm-6">
                <h3>Product list</h3>
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="">Home</a></li>
                  <li class="breadcrumb-item">Products </li>
                  <li class="breadcrumb-item">Product-list</li>
                </ol>
              </div>
              <div class="col-sm-6">
                <!-- Bookmark Start-->
                <div class="bookmark">
                  <ul>
                    <a href="product-create.html"><button class="btn btn-primary" id="addRow">Add New
                        Product</button></a>

                    <li><a href="javascript:void(0)"><i class="bookmark-search" data-feather="search"></i></a>
                      <form class="form-inline search-form">
                        <div class="form-group form-control-search">
                          <input type="text" placeholder="Search..">
                        </div>
                      </form>
                    </li>
                  </ul>
                </div>
                <!-- Bookmark Ends-->
              </div>
            </div>
          </div>
        </div>
        <!-- Container-fluid starts-->
        <div class="container-fluid list-products">
          <div class="row">
            <!-- Individual column searching (text inputs) Starts-->
            <div class="col-sm-12">
              <div class="card">
                <div class="card-header pb-0">
                  <h5>Product List</h5>
                </div>
                <div class="card-body">
                  <div class="table-responsive product-table">
                    <table class="display" id="basic-1">
                      <thead>
                        <tr>
                          <th>Images</th>
                          <th>Title</th>
                          <th>Description</th>
                          <th>Category</th>
                          <th>Stock At Present</th>
                          <th>Unit</th>
                          <th>Weight Options</th>
                          <th>Price</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% products.forEach(product=> { %>
                          <tr>
                            <td>
                              <!-- <a href="product-page.html"> -->
                              <% if (product.images) { %>
                                <img src="/<%= product.images %>" alt="Product Image" class="img-thumbnail"
                                  style="width: 100px; height: auto;">
                                <% } %>
                                  <!-- </a> -->
                            </td>
                            <td>
                              <a href="product-page.html"><span>
                                  <%= product.title %>
                                </span></a>
                            </td>
                            <td><span>
                                <%= product.description %>
                              </span></td>
                            <td>
                              <%= product.categoryName %>
                            </td>
                            <td class="font-success">
                              <%= product.stockAtPresent> 0 ? 'In Stock' : 'Out of Stock' %>
                            </td>
                            <td>
                              <%= product.unit %>
                            </td>
                            <td>
                              <% if (product.weightOptions && product.weightOptions.trim().length > 0) { %>
                                  <ul>
                                      <% 
                                        let weightArray = product.weightOptions.split(',').map(Number); // Split and convert to numbers
                                        weightArray.sort((a, b) => a - b); // Sort the array in ascending order
                                      %>
                                      <% weightArray.forEach(weight => { %>
                                          <li>
                                              <%= weight %>
                                          </li>
                                      <% }) %>
                                  </ul>
                              <% } else { %>
                                  <span>No Weight Options</span>
                              <% } %>
                          </td>
                          

                            <td>
                              <% if (product.prices && product.prices.trim().length> 0) { %>
                                <ul>
                                  <% let priceArray=product.prices.split(','); %>
                                    <% priceArray.forEach(price=> { %>
                                      <li>Rs. <%= price %>
                                      </li>
                                      <% }) %>
                                </ul>
                                <% } else { %>
                                  <span>No Price Available</span>
                                  <% } %>
                            </td>

                            <td>
                              <form action="/admin/product/delete/<%= product.productId %>" method="DELETE"
                                style="display: inline;" onsubmit="return confirmDelete();">
                                <button class="btn btn-danger btn-xs" type="submit" title="Delete">Delete</button>
                              </form>
                              <a href="/admin/product/edit/<%= product.productId %>">
                                <button class="btn btn-primary btn-xs" type="button" title="Edit">Edit</button>
                              </a>
                            </td>
                          </tr>
                          <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <!-- Individual column searching (text inputs) Ends-->
          </div>
        </div>

        <!-- Container-fluid Ends-->
      </div>
      <!-- footer start-->
      
    </div>
  </div>

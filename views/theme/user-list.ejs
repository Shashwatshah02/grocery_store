<div class="page-body">
  <div class="container-fluid">
    <div class="page-header">
      <div class="row">
        <div class="col-sm-6">
          <h3>Find all User</h3>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="">Home</a></li>
            <li class="breadcrumb-item">User</li>
            <li class="breadcrumb-item">User list</li>
          </ol>
        </div>
        <div class="col-sm-6">
          <!-- Bookmark Start-->
          <div class="bookmark">
            <ul>
              <a href="/admin/customer/create"><button class="btn btn-primary" id="addRow">Add new
                  User</button></a>
              <!-- <li><a href="javascript:void(0)"><i class="bookmark-search" data-feather="search"></i></a> -->
                <!-- <form class="form-inline search-form">
                  <div class="form-group form-control-search">
                    <input type="text" placeholder="Search..">
                  </div>
                </form> -->
              <!-- </li> -->
            </ul>
          </div>
          <!-- Bookmark Ends-->
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        <div class="card">
          <div class="card-header">
            <h5>User List</h5>
          </div>
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead class="thead-light">
                <tr>
                  <th scope="col">Profile Img</th>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Phone</th>
                  <th scope="col">Address</th>
                  <th scope="col">City</th>
                  <th scope="col">Country</th>
                  <th scope="col">Zip code</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% customers.forEach(customer=> { %>
                  <tr>
                    <td class="text-center">
                      <a href="product-page.html">
                        <img
                          src="/<%= customer.customerProfilePicture ? customer.customerProfilePicture : 'uploads/default_image.png' %>"
                          alt="Profile" width="80" height="80" class="rounded-circle">
                      </a>
                    </td>
                    <td>
                      <%= customer.customerName %>
                    </td>
                    <td>
                      <%= customer.customerEmail %>
                    </td>
                    <td>
                      <%= customer.customerPhone %>
                    </td>
                    <td>
                      <%= customer.customerAddress %>
                    </td>
                    <td>
                      <%= customer.customerCity %>
                    </td>
                    <td>
                      <%= customer.customerCountry %>
                    </td>
                    <td>
                      <%= customer.customerZipCode %>
                    </td>
                    <td>
                      <form action="/admin/customer/delete/<%= customer.customerId %>" method="DELETE"
                        style="display: inline;" onsubmit="return confirmDelete();">
                        <button class="btn btn-danger btn-sm" type="submit" title="Delete">Delete</button>
                      </form>
                      <a href="/admin/customer/edit/<%= customer.customerId %>">
                        <button class="btn btn-primary btn-sm" type="button" title="Edit">Edit</button>
                      </a>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>



  <!-- Container-fluid Ends-->

  <script>
    function confirmDelete() {
      return confirm("Are you sure you want to delete this customer? All orders and corresponding details will be deleted too.");
    }
  </script>